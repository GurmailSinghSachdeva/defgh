<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        layout="@layout/layout_header"

        android:id="@+id/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:layout_above="@+id/footer"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <include
                layout="@layout/layout_chat_row"
                android:layout_below="@+id/header"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/row1"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <include
                layout="@layout/layout_chat_row"
                android:layout_below="@+id/row1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:id="@+id/row2"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <include
                layout="@layout/layout_chat_row"
                android:layout_below="@+id/row2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:id="@+id/row3"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <include
                layout="@layout/layout_chat_row"
                android:layout_below="@+id/row3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:id="@+id/row4"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <include
                layout="@layout/layout_chat_row"
                android:layout_below="@+id/row3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:id="@+id/row4"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <include
                layout="@layout/layout_chat_row"
                android:layout_below="@+id/row3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:id="@+id/row4"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <include
                layout="@layout/layout_chat_row"
                android:layout_below="@+id/row3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:id="@+id/row4"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <include
                layout="@layout/layout_chat_row"
                android:layout_below="@+id/row3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:id="@+id/row4"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/layout_footer"
        android:layout_width="match_parent"
        android:id="@+id/footer"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout><!--<com.github.mmin18.widget.RealtimeBlurView--><!--android:layout_width="match_parent"--><!--android:layout_height="match_parent"--><!--app:realtimeOverlayColor="#aaffffff"--><!--android:id="@+id/gg"--><!--app:realtimeBlurRadius="20dp"--><!--/>-->

